section(class="py-10 md:py-16")
    .container
        header(class="body-title leading-tight font-bold text-center") Friends of Friends
        div( class="mt-6 md:mt-10 items-center friends-grid" )
            each friend, index in friends
                .card(href="#" class=`h-full w-full m-auto relative min-h-min no-underline text-black group`)
                    .card-content
                        .back(class="p-5 absolute inset-0 z-50 friends-gradient shadow-xl rounded-3xl" )
                            .text(class="text-center text-white tracking-wide flex flex-col items-center h-full")
                                if (friend.name.back)
                                    header(class="text-lg name font-bold after:block after:mx-auto after:my-1.5 after:h-[2px] after:w-2 after:bg-white") #{friend.name.back}
                                else
                                    header(class="text-lg name font-bold after:block after:mx-auto after:my-1.5 after:h-[2px] after:w-2 after:bg-white") #{friend.name}

                                b(class="role text-xs") #{friend.role}
                                div(class="text-[9px] pt-4 flex-1 description") #{friend.description}
                                div(class="contacts relative flex items-center justify-center pt-2.5")
                                    - let social = Object(friend.contacts)
                                    each val, key in social
                                        a(href=`${val}` class="text-white inline-flex mx-1 relative hover:opacity-90 transition-opacity" target="_blank")
                                            +iconMono({
                                                classes: 'relative z-0 pointer-events-none fill-white w-8 h-8',
                                                icon: key
                                            })
                        .front(class="group-hover:pointer-events-none shadow-xl bg-white rounded-3xl absolute inset-0 w-full h-full")
                            img(loading="lazy" width="170" height="170" src=`img/friends/${friend.image}@680.png` class="absolute w-full h-full inset-0 object-cover z-0 ")
                            div(class="absolute py-2.5 left-0 right-auto bottom-9 friends-gradient rounded-r-full")
                                if (friend.name.front)
                                    p(class=" font-bold px-6 text-white") #{friend.name.front}
                                else
                                    p(class=" font-bold px-6 text-white") #{friend.name}


